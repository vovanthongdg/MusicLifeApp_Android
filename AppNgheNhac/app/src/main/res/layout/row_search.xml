<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivsearchbaihat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tvsearchbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/ivsearchbaihat"
        android:textColor="#0a0a0a"
        android:textSize="18sp"
        android:text="Ten bai hat"/>
    <TextView
        android:id="@+id/tvsearchcasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/ivsearchbaihat"
        android:layout_below="@+id/tvsearchbaihat"
        android:textColor="#6e6d6d"
        android:textSize="18sp"
        android:text="Ca Si"/>
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:id="@+id/ivsearchlike"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

</RelativeLayout>