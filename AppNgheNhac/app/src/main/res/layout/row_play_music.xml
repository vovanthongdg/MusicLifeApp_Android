<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/tvplaymusicindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="17sp"
            android:textColor="#fff"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tvplaymusictenbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvplaymusicindex"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="Ten ca khuc"
            android:textColor="#fff"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tvplaynhactencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvplaymusictenbaihat"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvplaymusicindex"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="ca si"
            android:textColor="#ffff"
            android:textSize="12sp"/>
    </RelativeLayout>

</RelativeLayout>